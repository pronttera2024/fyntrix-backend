# AWS Cognito Configuration
AWS_COGNITO_REGION=us-east-1
AWS_COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
AWS_COGNITO_CLIENT_ID=your_client_id_here
AWS_COGNITO_CLIENT_SECRET=your_client_secret_here

# Database Configuration
# IMPORTANT: Copy this file to .env and set your actual DATABASE_URL
# The application will automatically load from .env file

# For local development (SQLite) - uncomment to use:
# DATABASE_URL=sqlite:///./fyntrix_local.db

# For AWS RDS PostgreSQL (Production/Staging) - REQUIRED for production:
# Format: postgresql://username:password@endpoint:port/database_name?sslmode=require
# Replace with your actual RDS credentials:
DATABASE_URL=postgresql://username:password@your-rds-endpoint.region.rds.amazonaws.com:5432/postgres?sslmode=require

# Legacy database URL (for backward compatibility)
# ARISE_DATABASE_URL=postgresql://username:password@endpoint:port/database_name

# SQL Query Logging (set to 'true' for debugging)
SQL_ECHO=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Application Settings
ENV_NAME=development
